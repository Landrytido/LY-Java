<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>


<GridPane fx:id="gridPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.comptaapp.comptaappfrontend.controller.RegistrationController" alignment="CENTER" hgap="20" vgap="40" style="-fx-padding: 60; -fx-background-color: rgba(182, 11, 179, 0.9); -fx-border-color: #9e9e9e; -fx-border-width: 2; -fx-border-radius: 20; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 10);">
    <Label text="Inscription" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: center;"/>   
    <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" promptText="Nom d'utilisateur" style="-fx-font-size: 16; -fx-padding: 12; -fx-border-color: black; -fx-border-radius: 10; -fx-background-radius: 10; -fx-pref-width: 350; -fx-alignment: center;"/> 
    <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" promptText="Email" style="-fx-font-size: 16; -fx-padding: 12; -fx-border-color: black; -fx-border-radius: 10; -fx-background-radius: 10; -fx-pref-width: 350; -fx-alignment: center;"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" promptText="Mot de passe" style="-fx-font-size: 16; -fx-padding: 12; -fx-border-color: black; -fx-border-radius: 10; -fx-background-radius: 10; -fx-pref-width: 350; -fx-alignment: center;"/>
    <Button text="S'inscrire" onAction="#handleRegister" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-background-color: #1f8e03; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 12; -fx-border-radius: 10; -fx-background-radius: 10; -fx-pref-width: 300; -fx-alignment: center;"/>
    <Button text="Se connecter" onAction="#handleLoginNavigation" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-background-color: #1a0357; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 12; -fx-border-radius: 10; -fx-background-radius: 10; -fx-pref-width: 300; -fx-alignment: center;"/>
</GridPane>


